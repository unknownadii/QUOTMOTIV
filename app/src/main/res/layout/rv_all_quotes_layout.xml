<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_allQuotes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="30dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:id="@+id/ll_H_allQuotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightest_grey"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="100dp">

            <TextView
                android:id="@+id/tv_number_allQuotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="1" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_allQuotes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightest_grey"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_allQuotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="macjsfsiufhn siuhsu fhis ufhiu fhsiu fsiguf." />

            <TextView
                android:id="@+id/tv_allQuotesAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text=":- Aditya" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>